---
// Navbar.astro
import { initAnimations } from '../scripts/animations.js';
---

<header class="fixed w-full z-50 bg-white/80 backdrop-blur-sm animate slide-down">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
    <div class="flex justify-between items-center">
      <!-- Logo and brand name -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <img src="/images/logo.png" alt="Premier Planner Logo" class="h-20 w-auto" />
        </a>
      </div>
      
      <!-- Navigation links - hidden on mobile, shown on desktop -->
      <div class="hidden md:block">
        <div class="flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-premier-amber font-medium transition-colors duration-300">Our Story</a>
          <a href="/features" class="text-gray-700 hover:text-premier-amber font-medium transition-colors duration-300">Features</a>
          <a href="/gallery" class="text-gray-700 hover:text-premier-amber font-medium transition-colors duration-300">Gallery</a>
          <a href="/blog" class="text-gray-700 hover:text-premier-amber font-medium transition-colors duration-300">Blog Post</a>
          <a href="/appointment" class="text-gray-700 hover:text-premier-amber font-medium transition-colors duration-300">Appointment</a>
        </div>
      </div>
      
      <!-- Contact Us button -->
      <div class="hidden sm:block">
        <a href="/contact" class="border border-premier-purple text-premier-purple py-2 px-5 rounded-full hover:bg-premier-purple hover:text-white transition-all duration-300">
          Contact Us
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-700 hover:text-premier-purple focus:outline-none">
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu - hidden by default -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 animate fade-in">
      <div class="flex flex-col space-y-3 bg-white p-4 rounded-lg shadow-lg">
        <a href="/" class="text-gray-700 hover:text-premier-amber font-medium py-2 transition-colors duration-300">Our Story</a>
        <a href="/features" class="text-gray-700 hover:text-premier-amber font-medium py-2 transition-colors duration-300">Features</a>
        <a href="/gallery" class="text-gray-700 hover:text-premier-amber font-medium py-2 transition-colors duration-300">Gallery</a>
        <a href="/blog" class="text-gray-700 hover:text-premier-amber font-medium py-2 transition-colors duration-300">Blog Post</a>
        <a href="/appointment" class="text-gray-700 hover:text-premier-amber font-medium py-2 transition-colors duration-300">Appointment</a>
        <a href="/contact" class="text-gray-700 hover:text-premier-amber font-medium py-2 transition-colors duration-300">Contact Us</a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Import and initialize animations
  import { initAnimations } from '../scripts/animations.js';
  
  // Initialize animations when the component mounts
  document.addEventListener('DOMContentLoaded', () => {
    initAnimations();
    
    // Mobile menu toggle functionality
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        
        // Add visible class to trigger the animation when menu is shown
        if (!mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.add('visible');
        } else {
          mobileMenu.classList.remove('visible');
        }
      });
    }
  });
</script>

<style>
  /* Smooth shadow transition for the header when scrolling */
  header {
    transition: box-shadow 0.3s ease;
  }
  
  header.scrolled {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
</style> 
</script> 