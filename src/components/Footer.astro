---
// Footer.astro - Website footer with logo and links
import { initAnimations } from '../scripts/animations.js';

const currentYear = new Date().getFullYear();

const footerLinks = {
  quickLinks: [
    { label: 'Home', href: '/' },
    { label: 'About Us', href: '#about' },
    { label: 'Services', href: '#services' },
    { label: 'Gallery', href: '#gallery' },
    { label: 'Book Now', href: '#booking' },
    { label: 'Contact', href: '#contact' },
  ],
  services: [
    { label: 'Wedding Planning', href: '#weddings' },
    { label: 'Corporate Events', href: '#corporate' },
    { label: 'Birthday Celebrations', href: '#birthdays' },
    { label: 'Social Gatherings', href: '#social' },
    { label: 'Private Parties', href: '#private' },
    { label: 'Themed Events', href: '#themed' },
  ],
  contact: {
    address: '123 Event Avenue, Suite 456, New York, NY 10001',
    phone: '+1 (555) 123-4567',
    email: 'info@premierplanners.com'
  }
};
---

<footer class="bg-gray-900 text-white">
  <!-- Main Footer -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-6 lg:gap-8">
        <!-- Company Info -->
        <div class="text-center sm:text-left">
          <div class="flex justify-center sm:justify-start items-center mb-6">
            <img src="/images/logo.png" alt="Premier Planners Logo" class="h-10 md:h-12 w-auto mr-3" />
            <span class="text-xl md:text-2xl font-bold text-white">Premier<span class="text-purple-300">Planners</span></span>
          </div>
          <p class="text-gray-400 text-sm mb-4 text-center sm:text-left">
            Creating extraordinary events and unforgettable experiences. Your vision, our expertise, perfect celebrations.
          </p>
          <div class="flex justify-center sm:justify-start space-x-4">
            <a href="#" class="text-gray-400 hover:text-purple-300 transition-colors">
              <span class="sr-only">Facebook</span>
              <svg class="h-5 w-5 md:h-6 md:w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-purple-300 transition-colors">
              <span class="sr-only">Instagram</span>
              <svg class="h-5 w-5 md:h-6 md:w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="#" class="text-gray-400 hover:text-purple-300 transition-colors">
              <span class="sr-only">Twitter</span>
              <svg class="h-5 w-5 md:h-6 md:w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="text-center sm:text-left">
          <!-- Desktop version -->
          <div class="hidden sm:block">
            <h3 class="text-white text-base md:text-lg font-semibold mb-3 md:mb-4">Quick Links</h3>
            <ul class="space-y-1 md:space-y-2">
              {footerLinks.quickLinks.map(link => (
                <li>
                  <a href={link.href} class="text-gray-400 hover:text-purple-300 transition-colors text-sm md:text-base">
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Mobile accordion -->
          <div class="sm:hidden">
            <details class="border-b border-gray-800">
              <summary class="text-white font-semibold py-3 cursor-pointer flex justify-between items-center">
                Quick Links
                <span class="transform transition-transform duration-300 ease-in-out">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </span>
              </summary>
              <ul class="py-3 space-y-2">
                {footerLinks.quickLinks.map(link => (
                  <li>
                    <a href={link.href} class="text-gray-400 hover:text-purple-300 transition-colors text-sm block py-1">
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          </div>
        </div>

        <!-- Services -->
        <div class="text-center sm:text-left">
          <!-- Desktop version -->
          <div class="hidden sm:block">
            <h3 class="text-white text-base md:text-lg font-semibold mb-3 md:mb-4">Our Services</h3>
            <ul class="space-y-1 md:space-y-2">
              {footerLinks.services.map(link => (
                <li>
                  <a href={link.href} class="text-gray-400 hover:text-purple-300 transition-colors text-sm md:text-base">
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Mobile accordion -->
          <div class="sm:hidden">
            <details class="border-b border-gray-800">
              <summary class="text-white font-semibold py-3 cursor-pointer flex justify-between items-center">
                Our Services
                <span class="transform transition-transform duration-300 ease-in-out">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </span>
              </summary>
              <ul class="py-3 space-y-2">
                {footerLinks.services.map(link => (
                  <li>
                    <a href={link.href} class="text-gray-400 hover:text-purple-300 transition-colors text-sm block py-1">
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="text-center sm:text-left">
          <h3 class="text-white text-base md:text-lg font-semibold mb-3 md:mb-4">Contact Us</h3>
          <ul class="space-y-3 md:space-y-4">
            <li class="flex justify-center sm:justify-start items-start space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-300 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="text-gray-400 text-sm md:text-base">{footerLinks.contact.address}</span>
            </li>
            <li class="flex justify-center sm:justify-start items-center space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-300 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <a href={`tel:${footerLinks.contact.phone}`} class="text-gray-400 hover:text-purple-300 transition-colors text-sm md:text-base">
                {footerLinks.contact.phone}
              </a>
            </li>
            <li class="flex justify-center sm:justify-start items-center space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-300 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href={`mailto:${footerLinks.contact.email}`} class="text-gray-400 hover:text-purple-300 transition-colors text-sm md:text-base">
                {footerLinks.contact.email}
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
        <p class="text-gray-500 text-xs md:text-sm mb-4 md:mb-0 text-center sm:text-left">
          &copy; {currentYear} Premier Planners LLC. All rights reserved.
        </p>
        <div class="flex space-x-4 md:space-x-6">
          <a href="/privacy" class="text-gray-500 hover:text-purple-300 text-xs md:text-sm transition-colors">Privacy Policy</a>
          <a href="/terms" class="text-gray-500 hover:text-purple-300 text-xs md:text-sm transition-colors">Terms of Service</a>
          <a href="/sitemap" class="text-gray-500 hover:text-purple-300 text-xs md:text-sm transition-colors">Sitemap</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  @media (max-width: 640px) {
    footer a, footer span {
      font-size: 0.875rem; /* Slightly smaller text on very small screens */
    }
    
    details[open] summary svg {
      transform: rotate(180deg);
    }
  }
</style>

<script>
  // Import and initialize animations
  import { initAnimations } from '../scripts/animations.js';
  
  // Initialize animations when the component mounts
  document.addEventListener('DOMContentLoaded', () => {
    initAnimations();
  });
</script> 